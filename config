	# i3status configuration file.
	# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s (eszett):
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
	separator = ""
}

order += "memory"
order += "cpu_usage"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"
#order += "volume master"

wireless _first_ {
        format_up = "%bitrate"
        format_down = "W:DOWN"
}

ethernet _first_ {
        format_up = "%speed"
        format_down = "E:DOWN"
}

battery all {
#	format = "%remaining"
        format = "%percentage"
	integer_battery_capacity = true
	last_full_capacity = true
}

cpu_usage {
	format = "%usage"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
	format =  "%volume"
	format_muted = "MUTED"
}

tztime local {
	format = "%H:%M %d/%m/%Y"
}
